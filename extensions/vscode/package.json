{
  "name": "kyanite-vscode",
  "displayName": "kyanite-vscode",
  "description": "VSCode language support for alythical's kyanite",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [{
      "id": "kyanite",
      "extensions": [
        ".kya"
      ],
      "configuration": "./spec/language-configuration.json"
    }],
    "grammars": [{
      "path": "./spec/grammar.tmLanguage.json",
      "scopeName": "source.kyanite",
      "language": "kyanite"
    }]
  },
  "configurationDefaults": {
    "[kyanite]": {
      "editor.semanticHighlighting.enabled": true
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@kyanite/highlights": "file:../../crates/highlights",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.86.0",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  }
}
